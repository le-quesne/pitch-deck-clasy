<script>
  const slides = document.querySelectorAll<HTMLElement>('.slide');
  const prevBtn = document.getElementById('prev') as HTMLButtonElement;
  const nextBtn = document.getElementById('next') as HTMLButtonElement;
  const progressEl = document.getElementById('progress') as HTMLElement;
  const counterEl = document.getElementById('counter') as HTMLElement;
  const slideNumEl = document.getElementById('slideNum') as HTMLElement;

  const total = slides.length;
  let current = 0;
  let animating = false;

  // Build nav dots
  slides.forEach((_, i) => {
    const dot = document.createElement('div');
    dot.className = 'dot' + (i === 0 ? ' active' : '');
    dot.addEventListener('click', () => goTo(i));
    counterEl.appendChild(dot);
  });

  function updateUI() {
    progressEl.style.width = ((current + 1) / total * 100) + '%';
    slideNumEl.innerHTML = `<strong>${current + 1}</strong> / ${total}`;
    document.querySelectorAll('.dot').forEach((d, i) =>
      d.classList.toggle('active', i === current)
    );
    prevBtn.disabled = current === 0;
    nextBtn.disabled = current === total - 1;
  }

  function goTo(index: number) {
    if (animating || index === current || index < 0 || index >= total) return;
    animating = true;

    const outgoing = slides[current];
    const incoming = slides[index];
    const forward = index > current;

    // Exit current
    outgoing.classList.remove('active');
    outgoing.classList.add('exit-left');
    if (!forward) {
      outgoing.style.transform = 'translateX(60px)';
      outgoing.style.opacity = '0';
    }

    // Prep incoming (off-screen)
    incoming.style.transition = 'none';
    incoming.style.transform = `translateX(${forward ? '60px' : '-60px'})`;
    incoming.style.opacity = '0';
    incoming.getBoundingClientRect(); // force reflow

    // Animate incoming in
    incoming.style.transition = '';
    incoming.classList.add('active');

    current = index;
    updateUI();

    setTimeout(() => {
      outgoing.classList.remove('exit-left');
      outgoing.style.transform = '';
      outgoing.style.opacity = '';
      incoming.style.transform = '';
      incoming.style.opacity = '';
      animating = false;
    }, 560);
  }

  const next = () => goTo(current + 1);
  const prev = () => goTo(current - 1);

  nextBtn.addEventListener('click', next);
  prevBtn.addEventListener('click', prev);

  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowRight' || e.key === 'ArrowDown') next();
    if (e.key === 'ArrowLeft'  || e.key === 'ArrowUp')   prev();
  });

  // Swipe support
  let touchX = 0;
  document.addEventListener('touchstart', (e) => { touchX = e.touches[0].clientX; }, { passive: true });
  document.addEventListener('touchend', (e) => {
    const diff = touchX - e.changedTouches[0].clientX;
    if (Math.abs(diff) > 50) diff > 0 ? next() : prev();
  }, { passive: true });

  updateUI();
</script>


---
import Deck from "../components/Deck";
---
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Clasy — Pitch Deck</title>
  <link rel="icon" type="image/png" href="/logo.png" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Prompt:wght@300;400;500;600;700;800&family=Work+Sans:wght@300;400;500;600&display=swap"
    rel="stylesheet"
  />
  <style is:global>
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

    :root {
      --cyan:        #1ac4fc;
      --blue:        #1c71f3;
      --navy:        #001450;
      --white:       #ffffff;
      --muted:       rgba(255,255,255,0.50);
      --card-bg:     rgba(255,255,255,0.03);
      --card-border: rgba(26,196,252,0.12);
      --card-glow:   rgba(26,196,252,0.06);
      --grad:        linear-gradient(135deg, #1ac4fc 0%, #1c71f3 100%);
      --bg-primary:  #020810;
      --bg-secondary:#040e1e;
    }

    html, body {
      width: 100%; height: 100%;
      overflow: hidden;
      background: var(--bg-primary);
      color: var(--white);
      font-family: 'Work Sans', sans-serif;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }

    /* ── Animated background blobs ───────────────── */
    @keyframes blob1 {
      0%, 100% { transform: translate(0, 0) scale(1); }
      33% { transform: translate(30px, -40px) scale(1.1); }
      66% { transform: translate(-20px, 20px) scale(0.95); }
    }
    @keyframes blob2 {
      0%, 100% { transform: translate(0, 0) scale(1); }
      33% { transform: translate(-40px, 30px) scale(1.05); }
      66% { transform: translate(25px, -25px) scale(0.9); }
    }

    .bg-canvas {
      position: fixed;
      inset: 0;
      z-index: 0;
      overflow: hidden;
      pointer-events: none;
    }
    .bg-blob {
      position: absolute;
      border-radius: 50%;
      filter: blur(120px);
      will-change: transform;
    }
    .bg-blob-1 {
      width: 600px; height: 600px;
      background: rgba(26,196,252,.07);
      top: -15%; left: -10%;
      animation: blob1 20s ease-in-out infinite;
    }
    .bg-blob-2 {
      width: 500px; height: 500px;
      background: rgba(28,113,243,.06);
      bottom: -10%; right: -5%;
      animation: blob2 25s ease-in-out infinite;
    }
    .bg-blob-3 {
      width: 300px; height: 300px;
      background: rgba(26,196,252,.04);
      top: 40%; left: 50%;
      animation: blob1 30s ease-in-out infinite reverse;
    }

    /* ── Dot grid ────────────────────────────────── */
    .bg-grid {
      position: fixed;
      inset: 0;
      z-index: 0;
      pointer-events: none;
      background-image: radial-gradient(circle, rgba(26,196,252,.07) 1px, transparent 1px);
      background-size: 50px 50px;
      mask-image: radial-gradient(ellipse 70% 60% at 50% 50%, black 30%, transparent 70%);
      -webkit-mask-image: radial-gradient(ellipse 70% 60% at 50% 50%, black 30%, transparent 70%);
    }

    /* ── Slide sections ──────────────────────────── */
    .slide-section > * { position: relative; z-index: 1; }

    /* ── Stagger entrance animation ──────────────── */
    @keyframes fadeUp {
      from { opacity: 0; transform: translateY(20px); }
      to   { opacity: 1; transform: translateY(0); }
    }
    .slide-section.is-active .anim {
      animation: fadeUp .5s cubic-bezier(.4,0,.2,1) both;
    }
    .slide-section.is-active .anim-d1 { animation-delay: .06s; }
    .slide-section.is-active .anim-d2 { animation-delay: .12s; }
    .slide-section.is-active .anim-d3 { animation-delay: .18s; }
    .slide-section.is-active .anim-d4 { animation-delay: .24s; }
    .slide-section.is-active .anim-d5 { animation-delay: .30s; }
    .slide-section.is-active .anim-d6 { animation-delay: .36s; }
    .slide-section.is-active .anim-d7 { animation-delay: .42s; }
    .slide-section.is-active .anim-d8 { animation-delay: .48s; }

    /* ── Nav button hover ────────────────────────── */
    .nav-arrow:not(:disabled):hover {
      background: rgba(26,196,252,.12) !important;
      border-color: rgba(26,196,252,.35) !important;
      color: var(--cyan) !important;
      box-shadow: 0 0 20px rgba(26,196,252,.15);
    }

    /* ── Card hover ──────────────────────────────── */
    .glass-card {
      transition: border-color .3s, transform .3s, box-shadow .3s;
    }
    .glass-card:hover {
      border-color: rgba(26,196,252,.30) !important;
      transform: translateY(-3px);
      box-shadow: 0 8px 32px rgba(26,196,252,.08);
    }

    /* ── Dot button ──────────────────────────────── */
    .dot-btn { transition: all .3s cubic-bezier(.4,0,.2,1); }
    .dot-btn:hover { background: rgba(26,196,252,.5) !important; }

    /* ── Custom scrollbar (if overflow ever happens) */
    ::-webkit-scrollbar { width: 6px; }
    ::-webkit-scrollbar-track { background: transparent; }
    ::-webkit-scrollbar-thumb { background: rgba(26,196,252,.2); border-radius: 99px; }
  </style>
</head>
<body>
  <div class="bg-canvas">
    <div class="bg-blob bg-blob-1"></div>
    <div class="bg-blob bg-blob-2"></div>
    <div class="bg-blob bg-blob-3"></div>
  </div>
  <div class="bg-grid"></div>
  <Deck client:only="react" />
</body>
</html>

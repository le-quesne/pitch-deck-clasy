import Deck from "../components/Deck";
---
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Clasy â€” Pitch Deck</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Prompt:wght@300;400;500;600;700;800&family=Work+Sans:wght@300;400;500;600&display=swap"
    rel="stylesheet"
  />
  <style is:global>
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

    :root {
      --cyan:       #1ac4fc;
      --blue:       #1c71f3;
      --white:      #ffffff;
      --muted:      rgba(255,255,255,0.55);
      --card-bg:    rgba(255,255,255,0.04);
      --card-border:rgba(26,196,252,0.18);
      --grad:       linear-gradient(135deg, #1ac4fc 0%, #1c71f3 100%);
    }

    html, body {
      width: 100%; height: 100%;
      overflow: hidden;
      background: #030a17;
      color: var(--white);
      font-family: 'Work Sans', sans-serif;
    }

    /* Slide background */
    section[style] {
      background:
        radial-gradient(ellipse 80% 60% at 15% 20%, rgba(26,196,252,.06) 0%, transparent 65%),
        radial-gradient(ellipse 60% 50% at 85% 80%, rgba(28,113,243,.07) 0%, transparent 60%),
        linear-gradient(160deg, #030a17 0%, #050d1f 50%, #01174a 100%);
    }
    section[style]::after {
      content: '';
      position: absolute;
      inset: 0;
      background-image: radial-gradient(circle, rgba(26,196,252,.10) 1px, transparent 1px);
      background-size: 44px 44px;
      pointer-events: none;
      opacity: .45;
      z-index: 0;
    }
    section[style] > * { position: relative; z-index: 1; }

    /* Hover cards */
    [data-card]:hover {
      border-color: rgba(26,196,252,.4) !important;
      transform: translateY(-2px);
    }

    /* Button hover */
    button[aria-label="Anterior"]:not(:disabled):hover,
    button[aria-label="Siguiente"]:not(:disabled):hover {
      background: rgba(26,196,252,.15) !important;
      border-color: rgba(26,196,252,.4) !important;
      color: var(--cyan) !important;
    }
  </style>
</head>
<body>
  <Deck client:only="react" />
</body>
</html>
